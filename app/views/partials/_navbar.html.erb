<div class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <%= link_to "Todolist",root_path,class: 'navbar-brand' %>
        </div>
        <ul class="nav navbar-nav">
            <% if current_user.present? %>
              <li><%= link_to "New Item", new_item_path %></li>
            <% else%>
             <li><%= link_to "Sign Up", new_user_registration_path %></li>
             <li><%= link_to "Login", new_user_session_path %></li>
             <% end %>
         </ul>
         <% if user_signed_in? %>
                <%= link_to 'Signout', destroy_user_session_path(@user),
         data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'navbar-text navbar-link navbar-right' %>
         <% end %>
         <% if user_signed_in? %>
            <%= link_to current_user.email, edit_user_registration_path, class: 'navbar-text navbar-link navbar-right' %>
         <% end %>
        </div>
    </div>
    